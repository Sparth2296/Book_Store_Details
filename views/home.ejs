                            <div class="col-6 stat-item">
                                <div class="stat-number">
                                    <%= bookData.length %>
                                </div>
                                <div class="stat-label">Total Books</div>
                            </div>
                            <div class="col-6 stat-item">
                                <div class="stat-number">24</div>
                                <div class="stat-label">Categories</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Books Section -->
    <section class="books-section">
        <div class="container">
            <h2 class="section-title animate-fade-in-up">Your Book Collection</h2>

            <div class="row">
                <% if (bookData && bookData.length> 0) { %>
                    <% bookData.forEach((val, i)=> { %>
                        <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
                            <div class="card book-card animate-slide-in-up stagger-<%= (i % 8) + 1 %>">
                                <div class="book-image-container">
                                    <img src="./<%= val.bookImage %>" alt="<%= val.bookName %>"
                                        class="book-image"
                                        onerror="this.src='https://via.placeholder.com/300x400/667eea/ffffff?text=No+Image'">
                                    <div class="book-overlay">
                                        <div class="overlay-text">
                                            <i class="bi bi-eye fs-4"></i><br>
                                            Quick View
                                        </div>
                                    </div>
                                </div>

                                <div class="book-details">
                                    <h3 class="book-title">
                                        <%= val.bookName %>
                                    </h3>

                                    <div class="book-author">
                                        <i class="bi bi-person-circle"></i>
                                        <%= val.autherName %>
                                    </div>

                                    <p class="book-description">
                                        <%= val.discreption %>
                                    </p>

                                    <div class="d-flex align-items-center justify-content-between mb-3">
                                        <div class="book-price">
                                            <span class="price-badge">â‚¹<%= val.price %></span>
                                        </div>
                                        <small class="text-muted">
                                            <i class="bi bi-clock"></i> Book #<%= i + 1 %>
                                        </small>
                                    </div>

                                    <div class="action-buttons">
                                        <a href="/editData/<%= val._id%>" class="btn btn-edit">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a href="/deleteData/<%= val._id%>" class="btn btn-delete"
                                            onclick="return confirm('Are you sure you want to delete this book?')">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                            <% } else { %>
                                <div class="col-12">
                                    <div class="text-center py-5 animate-bounce-in">
                                        <i class="bi bi-books animate-rotate-in"
                                            style="font-size: 4rem; color: var(--text-light);"></i>
                                        <h3 class="mt-3 mb-2 animate-fade-in-up stagger-1">No Books Found</h3>
                                        <p class="text-muted animate-fade-in-up stagger-2">Start building your library
                                            by adding your first book!</p>
                                        <a href="/addData" class="btn-add-book mt-3 animate-scale-in stagger-3">
                                            <i class="bi bi-plus-circle"></i>
                                            Add Your First Book
