                <ul class="navbar-nav ms-auto">
                    <li class="nav-item animate-fade-in-right stagger-1">
                        <a class="nav-link" href="#"><i class="bi bi-house"></i> Home</a>
                    </li>
                    <li class="nav-item animate-fade-in-right stagger-2">
                        <a class="nav-link" href="#"><i class="bi bi-collection"></i> Categories</a>
                    </li>
                    <li class="nav-item animate-fade-in-right stagger-3">
                        <a class="nav-link" href="#"><i class="bi bi-heart"></i> Wishlist</a>
                    </li>
                    <li class="nav-item animate-fade-in-right stagger-4">
                        <a class="nav-link" href="#"><i class="bi bi-person"></i> Profile</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8 hero-content">
                    <h1 class="hero-title animate-fade-in-up">Discover Your Next Great Read</h1>
                    <p class="hero-subtitle animate-fade-in-up stagger-1">Explore thousands of books, manage your
                        collection, and dive into new worlds of knowledge and imagination.</p>

                    <div class="d-flex flex-wrap gap-3 align-items-center mb-4">
                        <a href="/addData" class="btn-add-book animate-scale-in stagger-2">
                            <i class="bi bi-plus-circle"></i>
                            Add New Book
                        </a>
                        <input type="text" class="search-bar animate-fade-in-right stagger-3"
